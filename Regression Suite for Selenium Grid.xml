<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >
<suite name="Regression Suite" parallel="tests" thread-count="2">

	<test name="Chrome Testing" preserve-order="false">
		<parameter name="browser" value="chrome" />
		<groups>
			<run>
				<include name="Regression" />
			</run>
		</groups>

		<classes>
			<class name="gridTests.AddComputerTest" />
			<class name="gridTests.EditComputerTest" />
			<class name="gridTests.DeleteComputerTest" />
			<class name="gridTests.SearchForComputerTest" />
			<class name="gridTests.ViewComputerDataTest" />

		</classes>
	</test>

	<test name="Firefox Testing" preserve-order="false">
		<parameter name="browser" value="firefox" />
		<groups>
			<run>
				<include name="Regression" />
			</run>
		</groups>

		<classes>
			<class name="gridTests.AddComputerTest" />
			<class name="gridTests.EditComputerTest" />
			<class name="gridTests.DeleteComputerTest" />
			<class name="gridTests.SearchForComputerTest" />
			<class name="gridTests.ViewComputerDataTest" />

		</classes>
	</test>

</suite> 
